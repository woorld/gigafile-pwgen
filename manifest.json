{
  "name": "ギガファイル便DLパスジェネレーター",
  "version": "1.0.1",
  "description": "ギガファイル便（https://gigafile.nu/）のページにDLパスワードの生成・設定を行うボタンを追加する拡張機能です。",
  "manifest_version": 3,
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://gigafile.nu/"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "service_worker.js"
  }
}
